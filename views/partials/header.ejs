<header class="shadow-sm">
    <div class="header container d-flex justify-content-between align-items-center py-4">
        <a class="text-decoration-none" href="/">
            <h1>Decode Blog</h1>
        </a>
        <div class="head-search w-25">
            <form class="input-group">
                <input type="text" name="search" class="form-control p-2" placeholder="Поиск по блогам" aria-describedby="button-addon2">
                <button type="submit" class="btn btn-primary py-2 px-3" type="button" id="button-addon2">
                    <img src="/img/icons/search.svg" alt="">
                    Найти
                </button>
            </form>                  
        </div>
        <div class="head-authorize">
            <% if(user._id){ %>
                <a href="/profile/<%= user._id %>">
                    <img style="width: 70px; height: 70px;" src="/img/avatar.png" alt="">
                </a>
            <% }else{ %>
                <a class="btn btn-primary p-2 px-3 me-2" href="/register">Регистрация</a>
                <a class="btn btn-primary p-2 px-5" href="/login">Вход</a>
            <% } %>
        </div>
    </div>
</header>